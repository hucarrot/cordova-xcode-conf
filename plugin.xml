<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
        id="cordova-youlove-xcode-conf"
        version="0.0.1">

    <name>XcodeConf</name>
    <description>Cordova xcode config</description>
    <license>Apache 2.0</license>
    <keywords>cordova,xcode,conf</keywords>
    <repo>https://github.com/hucarrot/cordova-youlove-xcode-conf.git</repo>
    <issue>https://github.com/hucarrot/cordova-youlove-xcode-conf/issues</issue>

    <!-- ios -->
    <platform name="ios">

        <!-- 项目语言 -->
        <config-file target="*-Info.plist" parent="CFBundleDevelopmentRegion">
            <string>zh_CN</string>
        </config-file>

        <!-- 相机(权限声明) -->
        <config-file target="*-Info.plist" parent="NSCameraUsageDescription">
            <string/>
        </config-file>

        <!-- 相册(权限声明) -->
        <config-file target="*-Info.plist" parent="NSPhotoLibraryUsageDescription">
            <string/>
        </config-file>

        <!-- 麦克风(权限声明) -->
        <config-file target="*-Info.plist" parent="NSMicrophoneUsageDescription">
            <string/>
        </config-file>

        <!-- 通信录(权限声明) -->
        <config-file target="*-Info.plist" parent="NSContactsUsageDescription">
            <string/>
        </config-file>

        <!-- 位置(权限声明) -->
        <config-file target="*-Info.plist" parent="NSLocationUsageDescription">
            <string/>
        </config-file>

        <!-- 在使用期间访问位置(权限声明) -->
        <config-file target="*-Info.plist" parent="NSLocationWhenInUseUsageDescription">
            <string/>
        </config-file>

    </platform>

</plugin>
